extends layout

block header
    title Edit Forms

block content
    h1 Edit Forms
    p Please select the form that you would like to edit:
    form(method='post')
        .form-group
            label Form:
            select.form-control(name='form-name')
                each form in forms
                    option(value='#{form.name}') #{form.name}
        .form-group
            button.btn.btn-primary(type='submit') Submit
